<Page
    x:Class="GalleryNestApp.PhotoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GalleryNestApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    Title="PhotoPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <ScrollViewer>
            <ItemsControl x:Name="PhotosItemsControl" ItemsSource="{Binding PhotoIds}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid VerticalAlignment="Top" Columns="3" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid x:Name="WebViewContainer">
                            <wv2:WebView2
                                x:Name="PhotoWebView"
                                Width="250"
                                Height="250"
                                Margin="5"
                                DefaultBackgroundColor="Transparent"
                                Loaded="WebView_Loaded" />
                            <ui:Button
                                Width="40"
                                Height="40"
                                Margin="20"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Panel.ZIndex="1"
                                Click="Upload_Click"
                                Icon="{ui:SymbolIcon Symbol=Delete48}" />

                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        <ui:Button
            Width="40"
            Height="40"
            Margin="20"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Click="Upload_Click"
            Icon="{ui:SymbolIcon Symbol=Add48}" />
    </Grid>
</Page>
