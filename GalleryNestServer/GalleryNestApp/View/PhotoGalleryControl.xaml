<UserControl
    x:Class="GalleryNestApp.View.PhotoGalleryControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GalleryNestApp.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>

        <local:FavouriteToIconConverter x:Key="FavouriteToIconConverter" />
        <local:BindingProxy x:Key="Proxy" Data="{Binding RelativeSource={RelativeSource AncestorType=UserControl}}" />

        <Style x:Key="CustomContextMenuStyle" TargetType="ContextMenu">
            <Setter Property="Background" Value="#2D2D2D" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#404040" />
            <Setter Property="Padding" Value="8" />

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ContextMenu">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                            <ItemsPresenter />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style BasedOn="{StaticResource {x:Type MenuItem}}" TargetType="MenuItem">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <ContentPresenter
                                    Grid.Column="0"
                                    Margin="0,0,8,0"
                                    Content="{TemplateBinding Icon}" />

                                <ContentPresenter
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    ContentSource="Header" />
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <ScrollViewer ScrollChanged="ScrollViewer_ScrollChanged">
        <ItemsControl
            x:Name="PhotosItemsControl"
            ItemsSource="{Binding ItemsSource, RelativeSource={RelativeSource AncestorType=UserControl}}"
            VirtualizingPanel.IsVirtualizing="True"
            VirtualizingPanel.VirtualizationMode="Recycling">
            <ItemsControl.GroupStyle>
                <GroupStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock
                                Margin="10,5"
                                FontSize="16"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="{Binding Name}" />
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </ItemsControl.GroupStyle>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel
                        MaxWidth="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ScrollViewer}}"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Top"
                        ItemWidth="250"
                        Orientation="Horizontal"
                        VirtualizingPanel.IsContainerVirtualizable="True"
                        VirtualizingPanel.IsVirtualizing="True"
                        VirtualizingPanel.VirtualizationMode="Recycling" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid Width="250">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid
                            Grid.Row="0"
                            Width="250"
                            Height="250"
                            Margin="10"
                            PreviewMouseDown="Grid_PreviewMouseDown">
                            <ui:ProgressRing
                                x:Name="LoadingIndicator"
                                Width="40"
                                Height="40"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Panel.ZIndex="1"
                                Foreground="Black"
                                IsEnabled="True"
                                IsIndeterminate="True"
                                Visibility="Visible" />
                            <Border ClipToBounds="True" CornerRadius="15">
                                <wv2:WebView2CompositionControl
                                    x:Name="PhotoWebView"
                                    Width="250"
                                    Height="250"
                                    Margin="5"
                                    DefaultBackgroundColor="Transparent"
                                    Loaded="WebView_Loaded"
                                    NavigationCompleted="WebView_NavigationCompleted"
                                    Unloaded="WebView_Unloaded" />
                            </Border>
                            <ui:Button
                                x:Name="FavoriteButton"
                                Width="40"
                                Height="40"
                                Margin="20"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Panel.ZIndex="10"
                                Background="#312f45"
                                Command="{Binding Data.AddToFavoritesCommand, Source={StaticResource Proxy}}"
                                CommandParameter="{Binding}"
                                Icon="{Binding IsFavourite, Converter={StaticResource FavouriteToIconConverter}}"
                                MouseOverBackground="BlueViolet"
                                Visibility="Visible" />

                            <ui:Button
                                x:Name="MenuButton"
                                Width="40"
                                Height="40"
                                Margin="20"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Panel.ZIndex="10"
                                Background="#312f45"
                                Click="MenuButton_Click"
                                Icon="{ui:SymbolIcon Symbol=MoreCircle20}"
                                MouseOverBackground="BlueViolet"
                                Visibility="Collapsed">
                                <ui:Button.ContextMenu>
                                    <ContextMenu x:Name="PhotoContextMenu" Style="{StaticResource CustomContextMenuStyle}">
                                        <MenuItem
                                            Command="{Binding Data.DeleteCommand, Source={StaticResource Proxy}}"
                                            CommandParameter="{Binding}"
                                            Header="Удалить" />
                                        <MenuItem
                                            Command="{Binding Data.AddToFavoritesCommand, Source={StaticResource Proxy}}"
                                            CommandParameter="{Binding}"
                                            Header="Добавить в избранное" />
                                        <MenuItem Header="Добавить в альбом">
                                            <MenuItem.ItemsSource>
                                                <Binding Path="Data.AlbumsSource" Source="{StaticResource Proxy}" />
                                            </MenuItem.ItemsSource>
                                            <MenuItem.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Image
                                                            Width="40"
                                                            Height="40"
                                                            Source="{Binding LastPhotoThumbnail}"
                                                            Stretch="UniformToFill" />
                                                        <TextBlock
                                                            Margin="5,0,0,0"
                                                            VerticalAlignment="Center"
                                                            Text="{Binding Name}" />
                                                    </StackPanel>
                                                </DataTemplate>
                                            </MenuItem.ItemTemplate>
                                            <MenuItem.ItemContainerStyle>
                                                <Style TargetType="MenuItem">
                                                    <Setter Property="Command" Value="{Binding AddToAlbumCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                                                    <Setter Property="CommandParameter" Value="{Binding}" />
                                                </Style>
                                            </MenuItem.ItemContainerStyle>
                                        </MenuItem>
                                        <MenuItem Header="Добавить в категорию">
                                            <MenuItem.ItemsSource>
                                                <Binding Path="Data.CategoriesSource" Source="{StaticResource Proxy}" />
                                            </MenuItem.ItemsSource>
                                            <MenuItem.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Image
                                                            Width="40"
                                                            Height="40"
                                                            Source="{Binding LastPhotoThumbnail}"
                                                            Stretch="UniformToFill" />
                                                        <TextBlock
                                                            Margin="5,0,0,0"
                                                            VerticalAlignment="Center"
                                                            Text="{Binding Name}" />
                                                    </StackPanel>
                                                </DataTemplate>
                                            </MenuItem.ItemTemplate>
                                            <MenuItem.ItemContainerStyle>
                                                <Style TargetType="MenuItem">
                                                    <Setter Property="Command" Value="{Binding AddToСategoryCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                                                    <Setter Property="CommandParameter" Value="{Binding}" />
                                                </Style>
                                            </MenuItem.ItemContainerStyle>
                                        </MenuItem>
                                        <MenuItem Header="Добавить к человеку">
                                            <MenuItem.ItemsSource>
                                                <Binding Path="Data.PeopleSource" Source="{StaticResource Proxy}" />
                                            </MenuItem.ItemsSource>
                                            <MenuItem.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Image
                                                            Width="40"
                                                            Height="40"
                                                            Source="{Binding LastPhotoThumbnail}"
                                                            Stretch="UniformToFill" />
                                                        <TextBlock
                                                            Margin="5,0,0,0"
                                                            VerticalAlignment="Center"
                                                            Text="{Binding Name}" />
                                                    </StackPanel>
                                                </DataTemplate>
                                            </MenuItem.ItemTemplate>
                                            <MenuItem.ItemContainerStyle>
                                                <Style TargetType="MenuItem">
                                                    <Setter Property="Command" Value="{Binding AddToPersonCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                                                    <Setter Property="CommandParameter" Value="{Binding}" />
                                                </Style>
                                            </MenuItem.ItemContainerStyle>
                                        </MenuItem>
                                        <!--  Аналогичные пункты для категорий и людей  -->
                                    </ContextMenu>
                                </ui:Button.ContextMenu>
                            </ui:Button>
                            <!--<ui:Button
                                x:Name="DeleteButton"
                                Width="40"
                                Height="40"
                                Margin="20"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Panel.ZIndex="10"
                                Background="#312f45"
                                Command="{Binding DeleteCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding}"
                                Icon="{ui:SymbolIcon Symbol=Delete48}"
                                Visibility="Collapsed" />-->
                        </Grid>
                        <StackPanel
                            x:Name="AlbumInfoPanel"
                            Grid.Row="1"
                            VerticalAlignment="Bottom"
                            Visibility="Collapsed">
                            <TextBlock
                                FontWeight="Bold"
                                Foreground="White"
                                Text="{Binding Name}"
                                TextTrimming="CharacterEllipsis" />

                            <!--<TextBlock
                                Text="{Binding Photos.Count, StringFormat='{}Фото: {0}'}"
                                Foreground="Gray"/>-->
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</UserControl>
