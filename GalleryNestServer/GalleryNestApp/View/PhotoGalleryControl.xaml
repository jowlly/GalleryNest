<UserControl
    x:Class="GalleryNestApp.View.PhotoGalleryControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GalleryNestApp.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <ScrollViewer ScrollChanged="ScrollViewer_ScrollChanged">
        <ItemsControl
            x:Name="PhotosItemsControl"
            ItemsSource="{Binding ItemsSource, RelativeSource={RelativeSource AncestorType=UserControl}}"
            VirtualizingPanel.IsVirtualizing="True"
            VirtualizingPanel.VirtualizationMode="Recycling">
            <ItemsControl.GroupStyle>
                <GroupStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock
                                Margin="10,5"
                                FontSize="16"
                                FontWeight="Bold"
                                Text="{Binding Name}" />
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </ItemsControl.GroupStyle>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel
                        MaxWidth="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ScrollViewer}}"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Top"
                        ItemWidth="250"
                        Orientation="Horizontal"
                        VirtualizingPanel.IsContainerVirtualizable="True"
                        VirtualizingPanel.IsVirtualizing="True"
                        VirtualizingPanel.VirtualizationMode="Recycling" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid Width="250">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid
                            Grid.Row="0"
                            Width="250"
                            Height="250"
                            Margin="10"
                            PreviewMouseDown="Grid_PreviewMouseDown">
                            <ui:ProgressRing
                                x:Name="LoadingIndicator"
                                Width="40"
                                Height="40"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Panel.ZIndex="1"
                                Foreground="Black"
                                IsEnabled="True"
                                IsIndeterminate="True"
                                Visibility="Visible" />
                            <Border ClipToBounds="True" CornerRadius="15">
                                <wv2:WebView2CompositionControl
                                    x:Name="PhotoWebView"
                                    Width="250"
                                    Height="250"
                                    Margin="5"
                                    DefaultBackgroundColor="Transparent"
                                    Loaded="WebView_Loaded"
                                    NavigationCompleted="WebView_NavigationCompleted"
                                    Unloaded="WebView_Unloaded" />
                            </Border>
                            <ui:Button
                                x:Name="DeleteButton"
                                Width="40"
                                Height="40"
                                Margin="20"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Panel.ZIndex="10"
                                Background="#312f45"
                                Command="{Binding DeleteCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding}"
                                Icon="{ui:SymbolIcon Symbol=Delete48}"
                                Visibility="Collapsed" />
                        </Grid>
                        <StackPanel
                            x:Name="AlbumInfoPanel"
                            Grid.Row="1"
                            VerticalAlignment="Bottom"
                            Visibility="Collapsed">
                            <TextBlock
                                FontWeight="Bold"
                                Text="{Binding Name}"
                                TextTrimming="CharacterEllipsis" />

                            <!--<TextBlock
                                Text="{Binding Photos.Count, StringFormat='{}Фото: {0}'}"
                                Foreground="Gray"/>-->
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</UserControl>
