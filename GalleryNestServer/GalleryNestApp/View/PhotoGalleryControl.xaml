<UserControl
    x:Class="GalleryNestApp.View.PhotoGalleryControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GalleryNestApp.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>

        <local:FavouriteToIconConverter x:Key="FavouriteToIconConverter" />
        <local:BindingProxy x:Key="Proxy" Data="{Binding RelativeSource={RelativeSource AncestorType=UserControl}}" />

        <Style x:Key="CustomContextMenuStyle" TargetType="ContextMenu">
            <Setter Property="Background" Value="#2D2D2D" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#404040" />
            <Setter Property="Padding" Value="8" />

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ContextMenu">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                            <ItemsPresenter />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style BasedOn="{StaticResource {x:Type MenuItem}}" TargetType="MenuItem">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <ContentPresenter
                                    Grid.Column="0"
                                    Margin="0,0,8,0"
                                    Content="{TemplateBinding Icon}" />

                                <ContentPresenter
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    ContentSource="Header" />
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <ScrollViewer ScrollChanged="ScrollViewer_ScrollChanged">
        <ItemsControl
            x:Name="PhotosItemsControl"
            ItemsSource="{Binding ItemsSource, RelativeSource={RelativeSource AncestorType=UserControl}}"
            VirtualizingPanel.IsVirtualizing="True"
            VirtualizingPanel.VirtualizationMode="Recycling">
            <ItemsControl.GroupStyle>
                <GroupStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock
                                Margin="10,5"
                                FontSize="16"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="{Binding Name}" />
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </ItemsControl.GroupStyle>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel
                        MaxWidth="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ScrollViewer}}"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Top"
                        ItemWidth="250"
                        Orientation="Horizontal"
                        VirtualizingPanel.IsContainerVirtualizable="True"
                        VirtualizingPanel.IsVirtualizing="True"
                        VirtualizingPanel.VirtualizationMode="Recycling" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid Width="250">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid
                            Grid.Row="0"
                            Width="250"
                            Height="250"
                            Margin="10"
                            PreviewMouseDown="Grid_PreviewMouseDown">
                            <ui:ProgressRing
                                x:Name="LoadingIndicator"
                                Width="40"
                                Height="40"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Panel.ZIndex="1"
                                Foreground="Black"
                                IsEnabled="True"
                                IsIndeterminate="True"
                                Visibility="Visible" />
                            <Border ClipToBounds="True" CornerRadius="15">
                                <wv2:WebView2CompositionControl
                                    x:Name="PhotoWebView"
                                    Width="250"
                                    Height="250"
                                    Margin="5"
                                    DefaultBackgroundColor="Transparent"
                                    Loaded="WebView_Loaded"
                                    NavigationCompleted="WebView_NavigationCompleted"
                                    Unloaded="WebView_Unloaded" />
                            </Border>
                            <CheckBox
                                x:Name="SelectionCheckBox"
                                Margin="10"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                IsChecked="{Binding IsSelected, Mode=TwoWay}" />

                        </Grid>
                        <StackPanel
                            x:Name="AlbumInfoPanel"
                            Grid.Row="1"
                            VerticalAlignment="Bottom"
                            Orientation="Horizontal"
                            Visibility="Collapsed">
                            <TextBlock
                                x:Name="AlbumNameText"
                                Margin="10,5,5,5"
                                VerticalAlignment="Center"
                                FontSize="16"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="{Binding Name}" />

                            <ui:Button
                                x:Name="EditButton"
                                Width="20"
                                Height="20"
                                Margin="0,0,10,0"
                                Padding="0"
                                Background="Transparent"
                                BorderThickness="0"
                                Click="EditButton_Click"
                                Cursor="Hand"
                                Icon="{ui:SymbolIcon Symbol=Pen24}"
                                ToolTip="Переименовать альбом" />

                            <StackPanel
                                x:Name="EditPanel"
                                Orientation="Horizontal"
                                Visibility="Collapsed">
                                <TextBox
                                    x:Name="EditTextBox"
                                    Width="200"
                                    Margin="5,5,5,5"
                                    Background="White"
                                    FontSize="16"
                                    FontWeight="Bold"
                                    Foreground="Black"
                                    KeyDown="EditTextBox_KeyDown"
                                    Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />

                                <Button
                                    x:Name="ConfirmButton"
                                    Width="20"
                                    Height="20"
                                    Margin="0,0,10,0"
                                    Padding="0"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Click="ConfirmButton_Click"
                                    Cursor="Hand"
                                    ToolTip="Подтвердить изменения">
                                    <Button.Content>
                                        <Path
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Data="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"
                                            Fill="Green"
                                            Stretch="Uniform" />
                                    </Button.Content>
                                </Button>
                            </StackPanel>

                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</UserControl>
